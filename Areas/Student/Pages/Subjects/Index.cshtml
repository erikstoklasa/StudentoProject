@model SchoolGradebook.Areas.Student.Pages.Subjects.IndexModel
@using SchoolGradebook.Services
@using Microsoft.AspNetCore.Http;
@using System.Security.Claims;
@inject Analytics analytics
@inject IHttpContextAccessor httpContextAccessor

@{
    string UserId = httpContextAccessor.HttpContext.User.FindFirstValue(ClaimTypes.NameIdentifier);
    ViewData["Title"] = "Index";
}

<h1>Všechny tvé předměty</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subjects)
        {

            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.Raw(item.Teacher.getFullName())
                </td>
                <td>
                    @Html.Raw((await analytics.GetSubjectAverageForStudentAsync(UserId, item.Id)).CompareTo(Double.NaN) == 0 ?
                   "Žádné známky" : (await analytics.GetSubjectAverageForStudentAsync(UserId, item.Id)).ToString("f2"))
                </td>
            </tr>
        }
    </tbody>
</table>
