@page
@model SchoolGradebook.Pages.Teacher.Grades.CreateModel

@{
    ViewData["Title"] = "Přidat známku";
}

   <h1>@Model.SubjectName</h1>
<h3>Přidat známku</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade.Name" class="control-label">Název</label>
                <input asp-for="Grade.Name" class="form-control" />
                <span asp-validation-for="Grade.Name" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Grade.Value" class="control-label">Známka</label>
                <input asp-for="Grade.Value" class="form-control" />
                <span asp-validation-for="Grade.Value" class="text-danger"></span>
            </div>
                -->
            <div class="form-group">
                <label class="control-label">Studenti:</label>
                @for (int i = 0; i < Model.Students.Count; i++)
                {
                    @Model.Students[i].GetFullName()
                    <input type="hidden" name="grades[@i][studentId]" value="@Model.Students[i].Id" />
                    <input type="text" name="grades[@i][grade]" placeholder="X" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Přidat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
