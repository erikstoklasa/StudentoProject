@page
@model SchoolGradebook.Pages.Teacher.Students.IndexModel
@using SchoolGradebook.Models
@inject SchoolContext context;

@{
    ViewData["Title"] = "Index";
}

<h1>Studenti</h1>
<form class="search-bar">
    <label for="search">Zadejte jméno nebo příjmení studenta</label>
    <input class="form-control" id="search">
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Třída
            </th>
            <th>
                Jméno a příjmení
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-white">
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @item.Class.GetName()
                </td>
                <td class="search-data">
                    @item.GetFullName()
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">Upravit</a> |
                    <a asp-page="Details" asp-route-id="@item.Id">Detaily</a>
                </td>
            </tr>
        }
    </tbody>
</table>
