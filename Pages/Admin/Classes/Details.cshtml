@page
@model SchoolGradebook.Pages.Admin.Classes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>@Model.Class.GetName()</h1>
    <h5>Třídní vyučující: @Model.Class.Teacher.GetFullName()</h5>
    <h6>Počet studentů: @Model.Students.Count</h6>
    <p class="text-muted">Studenti ve třídě</p>
    <table class="table table-white">
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>
                        <a asp-page="/Admin/Students/Details" asp-route-id="@student.Id">@student.GetFullName()</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Class.Id">Upravit</a> |
    <a asp-page="./Index">Zpět</a>
</div>
