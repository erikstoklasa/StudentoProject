@page
@model SchoolGradebook.Areas.Admin.Pages.Subjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Všechny předměty na škole</h1>
<p>
    <a asp-area="Admin" asp-page="Create">Vytvořit nový</a>
</p>
@if (Model.Subjects.Length == 0)
{
    <p class="alert alert-warning my-5">Zatím jste nevytvořil žádný předmět 🙁</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Název
                </th>
                <th>
                    Vyučující
                </th>
                <th>
                    Počet studentů
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Subjects.Length; i++)
            {
                <tr>
                    <td>
                        @Model.Subjects[i].Name
                    </td>
                    <td>
                        @Model.Subjects[i].Teacher.getFullName()
                    </td>
                    <td>
                        @Model.StudentsCount[i]
                    </td>
                    <td>
                        <a asp-area="Admin" asp-page="/Subjects/Edit" asp-route-id="@Model.Subjects[i].Id">Upravit</a> |
                        <a asp-area="Admin" asp-page="/Subjects/Details" asp-route-id="@Model.Subjects[i].Id">Detail</a> |
                        <a asp-area="Admin" asp-page="/Subjects/Delete" asp-route-id="@Model.Subjects[i].Id">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
