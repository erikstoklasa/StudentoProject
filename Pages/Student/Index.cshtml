@page
@model SchoolGradebook.Pages.Student.IndexModel
@using  SchoolGradebook.Services
@using  SchoolGradebook.Models
@{
    ViewData["Title"] = "Domů";
}
<div class="text-center">
    <div class="main-container">
        <div class="d-flex flex-row">
            <table class="table mr-3">
                <thead>
                    <tr>
                        <th>
                            Známka
                        </th>
                        <th>
                            Předmět
                        </th>
                        <th>
                            Datum
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.RecentGrades)
                    {
                        <tr>
                            <td>
                                @grade.Value.ToString()
                            </td>
                            <td>
                                @grade.SubjectInstance.GetFullName()
                            </td>
                            <td>
                                @LanguageHelper.getRelativeTime(grade.Added)
                            </td>
                            <td>
                                <a asp-page="Grades/Details" asp-route-gradeId="@grade.Id">Zobrazit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="d-flex flex-column">
            <div class="ml-3 text-left mb-4">
                <h1 style="font-weight: 400;">
                    Ahoj <strong>@LanguageHelper.Sklonuj(Model.StudentFirstName),</strong><br>jsi <strong>skvělý</strong> student!
                </h1>
                <h3 class="mt-5" style="font-weight: 400;">
                    Celkový průměr: <strong>
                        @Model.GPA
                    </strong>
                </h3>
                @Html.Raw(ViewData["ComparisonString"])
            </div>
        </div>
    </div>
    <p class="text-left">Všechny předměty:</p>
    <div class="subject-container">
        @foreach (var x in Model.SubjectsAndSubjectAverages)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@x.subjectInstance.SubjectType.Name</h5>
                    <p class="card-text">@x.subjectInstance.Teacher.GetFullName()</p>
                    <p class="card-text">
                        <strong>@x.subjectAverage</strong>
                    </p>
                    <a class="btn btn-primary" asp-page="Subjects/Details" asp-route-Id="@x.subjectInstance.Id">Zobrazit předmět</a>
                </div>
            </div>
        }
    </div>
</div>
