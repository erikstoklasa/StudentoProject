@page
@model SchoolGradebook.Pages.Admin.Subjects.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div>
    <h1>Odstranit předmět</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Název
        </dt>
        <dd class="col-sm-10">
            @Model.SubjectInstance.Name
        </dd>
        <dt class="col-sm-2">
            Učitel
        </dt>
        <dd class="col-sm-10">
            @Model.SubjectInstance.Teacher.getFullName()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="SubjectInstance.Id" />
        <input type="submit" value="Odstranit předmět" class="btn btn-danger" /> |
        <a asp-page="./Index">Zpět</a>
    </form>
</div>
