@page
@model IndexModel
@{
    ViewData["Title"] = "Domů";
}
<div class="text-center">
    @if (
!(User.IsInRole("teacher") || User.IsInRole("student") || User.IsInRole("admin")) &&
User.Identity.IsAuthenticated
)
    {
        <h1 class="mt-3">Tvůj účet není aktivován</h1>
        <a class="btn btn-primary mt-3" asp-page="/ActivateAccount">Aktivovat účet</a>

    }
    else
    {
        <div class="landing-page">
            <div class="text-left" style="max-width: 800px; margin: 0 auto;">
                <h1 class="font-weight-bold" style="font-size: 3rem;">Moderní škola<br>je za dveřmi</h1>
                <div class="row">
                    <img class="main-image" src="~/images/girl.jpg" alt="Cartoon girl holding a book">
                </div>
                <a href="#" class="btn-lg btn-primary">Vyzkoušet</a>

                <div class="d-flex flex-column justify-content-start pt-5">
                    <h2 class="pb-2">Co už umíme</h2>
                    <ul style="list-style-type: none; line-height: 2; padding-left: 0; font-size: 1.2rem;">
                        <li>✅ Školní matrika</li>
                        <li>✅ Oline žákovská</li>
                        <li>✅ Studijní materiály od učitelů</li>
                    </ul>
                </div>
                <div class="d-flex flex-column justify-content-start pt-5">
                    <h2 class="pb-2">Na co se můžete těšit</h2>
                    <ul style="list-style-type: none; line-height: 2; padding-left: 0; font-size: 1.2rem;">
                        <li>🔵 Generování pololetního vysvědčení</li>
                        <li>🔵 Více typů rolí (ředitel, rodič)</li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
