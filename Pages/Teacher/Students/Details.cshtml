@page
@model SchoolGradebook.Pages.Teacher.Students.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Detail studenta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Jméno
        </dt>
        <dd class="col-sm-10">
            @Model.Student.FirstName
        </dd>
        <dt class="col-sm-2">
            Příjmení
        </dt>
        <dd class="col-sm-10">
            @Model.Student.LastName
        </dd>
        <dt class="col-sm-2">
            Datum narození
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Birthdate.GetValueOrDefault().ToString("dd. M. yyyy")
        </dd>
        <dt class="col-sm-2">
            Místo narození
        </dt>
        <dd class="col-sm-10">
            @Model.Student.PlaceOfBirth
        </dd>
        <dt class="col-sm-2">
            Rodné číslo
        </dt>
        <dd class="col-sm-10">
            @Model.Student.PersonalIdentifNumber
        </dd>
        <dt class="col-sm-2">
            Číslo občanského průkazu
        </dt>
        <dd class="col-sm-10">
            @Model.Student.IdentifCardNumber
        </dd>
        <dt class="col-sm-2">
            Číslo pojišťovny
        </dt>
        <dd class="col-sm-10">
            @Model.Student.InsuranceCompany
        </dd>
        <dt class="col-sm-2">
            Ulice
        </dt>
        <dd class="col-sm-10">
            @Model.Student.StreetAddress
        </dd>
        <dt class="col-sm-2">
            Město
        </dt>
        <dd class="col-sm-10">
            @Model.Student.CityAddress
        </dd>
        <dt class="col-sm-2">
            PSČ
        </dt>
        <dd class="col-sm-10">
            @Model.Student.ZipCode
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Email
        </dd>
        <dt class="col-sm-2">
            Telefonní číslo
        </dt>
        <dd class="col-sm-10">
            @Model.Student.PhoneNumber
        </dd>



        @if (Model.Student.StudentGroupEnrollments.Count == 0)
        {

            <p class="alert alert-warning my-5">Student namá přiřazenou žádnou skupinu 🙁</p>

        }
        else
        {

            <dt class="col-sm-2">
                Přiřazen k:
            </dt>

            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Skupina</th>
                    </tr>
                    @foreach (var item in Model.Student.StudentGroupEnrollments)
                    {
                        <tr>
                            <td>
                                @item.StudentGroup.Name
                            </td>
                        </tr>
                    }
                </table>
            </dd>

        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Upravit</a> |
    <a asp-page="./Index">Zpět</a>
</div>
