@page
@model SchoolGradebook.Pages.Admin.Classes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Třídy</h1>

<p>
    <a asp-page="Create">Vytvřit novou třídu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Třída
            </th>
            <th>
                Vyučující
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Classes) {
        <tr>
            <td>
                @item.GetName()
            </td>
            <td>
                @item.Teacher.GetFullName()
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Zobrazit</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Upravit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Odstranit</a>
            </td>
        </tr>
}
    </tbody>
</table>
