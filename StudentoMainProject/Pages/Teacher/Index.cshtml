@page
@model SchoolGradebook.Pages.Teacher.IndexModel
@{
    ViewData["Title"] = "Domů";
}
<h1 class="mb-4">Všechny předměty</h1>
@if (Model.Subjects.Count == 0)
{
    <p class="alert alert-warning my-5">Zatím Vám administrátor nepřidělil žádný předmět 🙁</p>
}
else
{
    <div class="subject-container">
        @foreach (var i in Model.SubjectsAndStudentCounts)
        {

            <div class="card mx-1 flex-column">
                <div class="card-body pb-0">
                    <div>
                        <h5 class="card-title">
                            <a asp-page="/Teacher/Subjects/Details" asp-route-id="@i.subjectInstance.Id">@i.subjectInstance.SubjectType.Name</a>
                        </h5>
                        <p class="card-text pl-lg-3">Studentů: @i.studentCount</p>
                    </div>
                </div>
                <div class="card-body flex-column justify-content-end"><a class="btn btn-primary" asp-page="/Teacher/Subjects/Details" asp-route-id="@i.subjectInstance.Id">Otevřít předmět</a></div>
            </div>
        }
    </div>
}
