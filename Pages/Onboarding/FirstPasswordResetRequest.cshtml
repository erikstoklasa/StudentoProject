@page
@model SchoolGradebook.Pages.FirstPasswordResetRequest
@{
    ViewData["title"] = "Studento vás vítá";
}
<div class="mx-auto text-center">
    <h1 class="mx-auto">Vítej v aplikaci Studento!</h1>
    <h3>Jaký je tvůj školní Email?</h3>
</div>
@if (ViewData["status"] != null)
{
    <div class="alert alert-success">@ViewData["status"]</div>
}
<form method="post" class="col-3 pt-2 mx-auto">
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" value="@Model.Email" />
    </div>
    <div class="form-group">
        <input type="submit" value="Aktivovat účet" class="btn btn-primary" />
    </div>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
