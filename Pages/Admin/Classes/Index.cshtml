@page
@model SchoolGradebook.Pages.Admin.Classes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Třídy</h1>
<p>
    <a asp-page="Create">Vytvřit novou třídu</a>
</p>
<form class="search-bar">
    <label for="search">Zadejte třídu</label>
    <input class="form-control" id="search">
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Třída
            </th>
            <th>
                Vyučující
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-white">
        @foreach (var item in Model.Classes)
        {
            <tr>
                <td class="search-data">
                    @item.GetName()
                </td>
                <td>
                    @item.Teacher.GetFullName()
                </td>
                <td>
                    <a class="btn btn-primary" asp-page="/Admin/Classes/Details" asp-route-id="@item.Id">Zobrazit</a>
                    <a class="btn btn-outline-primary" asp-page="/Admin/Classes/Edit" asp-route-id="@item.Id">Upravit</a>
                    <a class="btn btn-outline-danger" asp-page="/Admin/Classes/Delete" asp-route-id="@item.Id">Odstranit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
