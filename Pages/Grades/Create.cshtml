@page "{SubjectId}"
@model SchoolGradebook.CreateModelGrades

@{
    ViewData["Title"] = "Přidat známku";
}

   <h1>@Html.Raw(Model.SubjectName)</h1>
<h3>Přidat známku</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade.Value" class="control-label">Známka</label>
                <input asp-for="Grade.Value" class="form-control" />
                <span asp-validation-for="Grade.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.StudentId" class="control-label">Student</label>
                <select asp-for="Grade.StudentId" class="form-control" asp-items="Model.Students"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Přidat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
