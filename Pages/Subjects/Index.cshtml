@page
@model SchoolGradebook.Pages.Subjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("teacher"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subjects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.Raw(item.Teacher.getFullName())
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Upravit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detail</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Odstranit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
