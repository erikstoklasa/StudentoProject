@page
@model SchoolGradebook.Areas.Admin.Pages.Enrollments.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Odstranit studenta z předmětu</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Předmět
        </dt>
        <dd class="col-sm-10">
            @Model.Enrollment.Subject.Name
        </dd>
        <dt class="col-sm-2">
            Student
        </dt>
        <dd class="col-sm-10">
            @Model.Enrollment.Student.getFullName()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Enrollment.Id" />
        <input type="submit" value="Odstranit studenta z předmětu" class="btn btn-danger" /> |
        <a asp-area="Admin" asp-page="/Students/Details" asp-route-id="@Model.Enrollment.StudentId">Zpět</a>
    </form>
</div>
