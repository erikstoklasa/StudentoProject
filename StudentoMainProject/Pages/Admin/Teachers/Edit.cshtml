@page
@model SchoolGradebook.Pages.Admin.Teachers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Upravit vyučujícího</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Teacher.Id" />
            <div class="form-group">
                <label asp-for="Teacher.FirstName" class="control-label"></label>
                <input asp-for="Teacher.FirstName" class="form-control" />
                <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.LastName" class="control-label"></label>
                <input asp-for="Teacher.LastName" class="form-control" />
                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Birthdate" class="control-label"></label>
                <input asp-for="Teacher.Birthdate" class="form-control" type="date" />
                <span asp-validation-for="Teacher.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.PlaceOfBirth" class="control-label"></label>
                <input asp-for="Teacher.PlaceOfBirth" class="form-control" />
                <span asp-validation-for="Teacher.PlaceOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.PersonalIdentifNumber" class="control-label"></label>
                <input asp-for="Teacher.PersonalIdentifNumber" class="form-control" />
                <span asp-validation-for="Teacher.PersonalIdentifNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.StartDate" class="control-label"></label>
                <input asp-for="Teacher.StartDate" class="form-control" type="date" />
                <span asp-validation-for="Teacher.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.EducationLevel" class="control-label"></label>
                <input asp-for="Teacher.EducationLevel" class="form-control" />
                <span asp-validation-for="Teacher.EducationLevel" class="text-danger"></span>
            </div>
            <label class="control-label">Aprobace</label>
            <div class="form-group">
                <select class="approbationsSelect" name="Approbations" multiple="multiple">
                    @foreach (var st in Model.AllSubjectTypes)
                    {
                        if (Model.Approbations.Exists(appr => appr == st.Id))
                        {
                            <option value="@st.Id" selected>@st.Name</option>
                        }
                        else
                        {
                            <option value="@st.Id">@st.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Teacher.IdentifCardNumber" class="control-label"></label>
                <input asp-for="Teacher.IdentifCardNumber" class="form-control" />
                <span asp-validation-for="Teacher.IdentifCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.InsuranceCompany" class="control-label"></label>
                <input asp-for="Teacher.InsuranceCompany" class="form-control" />
                <span asp-validation-for="Teacher.InsuranceCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.StreetAddress" class="control-label"></label>
                <input asp-for="Teacher.StreetAddress" class="form-control" />
                <span asp-validation-for="Teacher.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.CityAddress" class="control-label"></label>
                <input asp-for="Teacher.CityAddress" class="form-control" />
                <span asp-validation-for="Teacher.CityAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.ZipCode" class="control-label"></label>
                <input asp-for="Teacher.ZipCode" class="form-control" />
                <span asp-validation-for="Teacher.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Email" class="control-label"></label>
                <input asp-for="Teacher.Email" class="form-control" />
                <span asp-validation-for="Teacher.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.PhoneNumber" class="control-label"></label>
                <input asp-for="Teacher.PhoneNumber" class="form-control" />
                <span asp-validation-for="Teacher.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zpět</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.approbationsSelect').select2({
                dropdownAutoWidth: true,
                width: '100%'
            });
        });
    </script>
}
