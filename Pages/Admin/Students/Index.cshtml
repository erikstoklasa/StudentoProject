@page
@model SchoolGradebook.Pages.Admin.Students.IndexModel
@using SchoolGradebook.Models
@inject SchoolContext context;

@{
    ViewData["Title"] = "Index";
}

<h1>Studenti</h1>
<p><a asp-page="./Create">Přidat studenta</a></p>
<p><a asp-page="/Admin/Import/Index">Naimportovat skupinu studentů</a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                Aktivační kód
            </th>
            <th>
                Stav
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Student)
        {
            HumanActivationCode c = context.HumanActivationCodes
                .Where(b => b.TargetId == item.Id)
                .Where(b => b.CodeType == CodeType.Student)
                .FirstOrDefault();
            bool hasActivationCode = c != null;
            <tr>
                <td>
                    @if (hasActivationCode)
                    {
                        @Html.Raw(c.HumanCode);
                    }
                </td>
                <td>
                    @if (item.UserAuthId != null)
                    {
                        @Html.Raw("Spárováno");
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-page="/HumanCodes/Create"
                       asp-route-targetId="@item.Id"
                       asp-route-codeType="@CodeType.Student">Vygenerovat nový kód</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Upravit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detaily</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Odstranit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
