@page
@model SchoolGradebook.Pages.Teacher.Subjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Všechny předměty</h1>
@if (Model.Subjects.Count == 0)
{
    <p class="alert alert-warning my-5">Zatím Vám administrátor nepřidělil žádný předmět 🙁</p>
}
else
{
    <div class="subject-container">
        @foreach (var i in Model.SubjectsAndStudentCounts)
        {

            <div class="card mx-1 flex-column">
                <div class="card-body">
                    <div>
                        <a asp-page="Details" asp-route-id="@i.subjectInstance.Id">
                            <h5 class="card-title">@i.subjectInstance.SubjectType.Name</h5>
                        </a>
                        <p class="card-text">Studentů: @i.studentCount</p>
                        <a class="btn btn-primary" asp-page="/Teacher/Grades/Create" asp-route-SubjectInstanceId="@i.subjectInstance.Id">Přidat známku</a>
                    </div>
                </div>
            </div>

        }
    </div>

}
