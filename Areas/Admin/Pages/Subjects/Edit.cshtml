@page
@model SchoolGradebook.Areas.Admin.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Upravit předmět</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.Id" />
            <div class="form-group">
                <label asp-for="Subject.TeacherId" class="control-label">Vyučující</label>
                <select asp-for="Subject.TeacherId" class="form-control" asp-items="Model.TeacherSelectList"></select>
                <span asp-validation-for="Subject.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Name" class="control-label">Název</label>
                <input asp-for="Subject.Name" class="form-control" />
                <span asp-validation-for="Subject.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upravit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zpět</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
