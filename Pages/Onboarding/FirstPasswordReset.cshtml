@page
@model SchoolGradebook.Pages.FirstPasswordReset
@{
    ViewData["title"] = "Výběr nového hesla";
}
<div class="mx-auto text-center">
    <h1 class="mx-auto">Vítej v aplikaci Studento!</h1>
    <h3>Nastav si své nové heslo</h3>
</div>
@if (ViewData["status"] != null)
{
    <div class="alert alert-success">@ViewData["status"]</div>
}
<form method="post" class="col-3 pt-2 mx-auto">
    <input type="hidden" asp-for="Code" value="@Model.Code"/>
    <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Nové heslo</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <input type="submit" value="Přihlásit se" class="btn btn-primary" />
    </div>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
